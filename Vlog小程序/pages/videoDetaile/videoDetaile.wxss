/* 呼吸动画 */
.btn_on {
  animation: scaleDraw 2s ease-in-out infinite;
}
@keyframes scaleDraw {  
    0%{
        transform: scale(1);  /*开始为原始大小*/
    }
    25%{
        transform: scale(1.05); /*放大1.05倍*/
    }
    50%{
        transform: scale(1);
    }
    75%{
        transform: scale(1.05);
    }
}

