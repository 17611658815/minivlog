/* pages/shortvideo/shortvideo.wxss */
#myVideo{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #cdcdcd;
  overflow: hidden;
  flex-direction:column;
  align-items:center;/*垂直居中*/
  justify-content: center;/*水平居中*/
  z-index: 1;
}
.controls{
    position: absolute;
    top: 50%;
    left:50%;
    transform: translate(-50%,-50%);
    z-index: 99
}
.icon_play_btn{
    width: 75rpx;
    height: 88rpx;
}
.primaryPhoneX{
    position: fixed;
    left:0;
    bottom:150rpx;
    background: #08B706;
    height: 5rpx;
    z-index: 9999999;
}
.primaryAndroid{
    position: fixed;
    left:0;
    bottom:90rpx;
    background: #08B706;
    height: 5rpx;
    z-index: 9999999;
}







